{
    "name": "ajowi/sendy-fulfilment",
    "description": "This package allows you to connect to the Sendy API to manage shipping fulfilment orders",
    "homepage": "https://github.com/ajowi/sendy-fulfilment",
    "license": "MIT",
    "authors": [
        {
            "name": "David Ajowi",
            "email": "ajowi@daniche.co.ke",
            "homepage": "https://github.com/ajowi",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/http-foundation": "^5.0",
        "php-http/client-common": "^2.0",
        "php-http/guzzle7-adapter": "0.1.1",
        "php-http/message": "^1.5",
        "psr/http-client": "^1.0"

    },
    "require-dev": {
        "php-http/mock-client": "^1.0",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Ajowi\\SendyFulfilment\\": "src"
        },
        "classmap": ["src/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Ajowi\\SendyFulfilment\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    }
}
